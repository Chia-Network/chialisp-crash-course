{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ESNext",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "strict": true
    },
    "include": ["src"]
}
